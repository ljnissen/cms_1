<% provide(:title, 'Delete section') %>


	
  <h1>Delete subject</h1>
<div class = "row">
	<div class = "col-md-6 col-md-offset-3">
		<%= link_to("Back to list", {:action => 'index', :page_id => @page.id}, class: 'btn btn-primary' ) %>

		<%= form_tag(section_path, :page_id => @page.id, method: :destroy)  %>
			<p>Are you sure that you want to permanently delete this subject?</p>
			
			<p><%= @section.name %></p>

			<%= submit_tag "Delete section", class: 'btn btn-primary' %>	
		
	</div>
</div>
