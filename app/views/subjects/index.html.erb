<% provide(:title, 'All subjects') %>
<h1>All subjects</h1>


	<div class="row">

		
		<table class="table table-striped">
			  <thead>
				<tr>
					<th>#</th>
					<th>Subject</th>
					<th>Visible</th>
					<th>Pages</th>
					<th>Actions</th>
				</tr>
			  </thead>
			<% @subjects.each do |subject| %>
			<tr>
				<td><%= subject.position %></td>
				<td><%= subject.name %></td>
				<td><%= subject.visible ? 'Yes' : 'No' %></td>
				<td><%= subject.pages.size %></td>
				<td class="button">
					<%= link_to("View pages", { :controller => 'pages', :subject_id => subject.id }, :class => 'btn btn-info') %>
					<%= link_to("Show", { :action => 'show', :id => subject.id }, :class => 'btn btn-primary') %>
					<%= link_to("Edit", {:action => 'edit', :id => subject.id}, :class => 'btn btn-success') %>
					<%= link_to("Delete", subject_path(subject), method: :delete, data: {confirm: 'Are you sure?' }, :class => 'btn btn-danger') %>
				</td>
			</tr>
			<% end %>
		</table>
		<%= link_to("Add new subject", {:action => 'new' }, :class => 'btn btn-info') %>
	</div>
		


