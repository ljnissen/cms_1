<% provide(:title, 'Delete page') %>


	
  <h1>Delete subject</h1>
<div class = "row">
	<div class = "col-md-6 col-md-offset-3">
		<%= link_to("Back to list", {:action => 'index', :subject_id => @subject.id}, class: 'btn btn-primary' ) %>

		<%= form_tag(page_path, :subject_id => @subject.id, method: :destroy)  %>
			<p>Are you sure that you want to permanently delete this subject?</p>
			
			<p><%= @page.name %></p>

			<%= submit_tag "Delete page", class: 'btn btn-primary' %>	
		
	</div>
</div>
